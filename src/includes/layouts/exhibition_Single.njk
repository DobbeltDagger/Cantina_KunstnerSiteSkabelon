{% extends "base.njk" %}

{% block mainContent %}

  <div class='insideCol'>

    <!-- GRID -->
    <div class="Grid Grid--gutters Grid--full large-Grid--fit">

      <!-- left col -->
      <div class="Grid-cell">
        <p><img src='{{ imgUrl }}'/></p>
        <h2>{{ title }}</h2>
        {{ content | safe }}
        <!-- <div class='backToArrow'><a href='/exhibitions'>&larr; tilbage</a></div> -->
      </div>
    </div>

    <!-- gallery -->
    {% if gallery.length %}
      <div class="Grid Grid--gutters Grid--full large-Grid--fit">
        <div class='Grid-cell'>
          <div class='galleryWrapper'>
            {% for img in gallery %}
              <img src='{{ img }}'/>
            {% endfor %}
          </div>
        </div>
      </div>
    {% endif %}

    <!-- slideshow, swiperjs-->
    {% if slideshow.length %}
      <div class="swiper-container">
        <div class="swiper-wrapper">
          {% for img in slideshow %}
            <div class="swiper-slide"><img src='{{ img }}' /></div>
          {% endfor %}
        </div>
        <!-- Add Pagination -->
        <div class="swiper-pagination"></div>
        <!-- Add Arrows -->
        <div class="swiper-button-next"></div>
        <div class="swiper-button-prev"></div>
      </div>
    {% endif %}

    <!-- lightbox -->
    {% if lightbox.length %}
      <div class='lightboxWrapper'>
        {% for img in lightbox %}
          <a href="{{ img }}" data-mediabox="{{ title }} gallery" data-title="{{ title }}">
            <img src="{{ img }}" alt="{{ title }}" />
          </a>
        {% endfor %}
      </div>
    {% endif %}    


  </div> <!-- eof grid -->


{% endblock mainContent %}