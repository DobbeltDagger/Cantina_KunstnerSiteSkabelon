{% extends "base.njk" %}

{% block mainContent %}

  <div class='insideCol'>

    <!-- GRID -->
    <div class="Grid Grid--gutters Grid--full large-Grid--fit">

      <!-- left col -->
      <div class="Grid-cell">
        <p><img src='{{ imgUrl }}'/></p>
        <h2>{{ title }}</h2>
        {{ content | safe }}
        <!-- <div class='backToArrow'><a href='/exhibitions'>&larr; tilbage</a></div> -->
      </div>
    </div>

    <!-- spacer -->
    <div class="Grid Grid--gutters Grid--full large-Grid--fit">
      <div class='Grid-cell'><p>&nbsp;</p></div>
    </div>

    <!-- GRID for images below main content -->
    <div class="Grid Grid--gutters Grid--full large-Grid--fit">
      <div class='Grid-cell'>
        <div class='galleryWrapper'>
          {% for prog in gallery %}
            <img src='{{ prog }}'/>
          {% endfor %}
        </div>
      </div>
    </div>

  </div> <!-- eof grid -->


  <!-- Swiper -->
  <div class='insideCol'>

      <div class="swiper-container">
        <div class="swiper-wrapper">
          <div class="swiper-slide"><img src='/assets/images/swiperDemo/1.jpg' /></div>
          <div class="swiper-slide"><img src='/assets/images/swiperDemo/2.jpg' /></div>
          <div class="swiper-slide"><img src='/assets/images/swiperDemo/3.jpg' /></div>
          <div class="swiper-slide"><img src='/assets/images/swiperDemo/4.jpg' /></div>
          <div class="swiper-slide"><img src='/assets/images/swiperDemo/5.jpg' /></div>
        </div>
        <!-- Add Pagination -->
        <div class="swiper-pagination"></div>
        <!-- Add Arrows -->
        <div class="swiper-button-next"></div>
        <div class="swiper-button-prev"></div>
      </div>

  </div>


  <!-- LIGHTBOx demo -->
  <div class='insideCol'>
    
    <div class='lightboxWrapper'>
      <a href="/assets/images/lightboxDemo/image1.jpg" data-mediabox="my-gallery-name" data-title="Sample image">
        <img src="/assets/images/lightboxDemo/image1-thumb.jpg" alt="Image" />
      </a>
      <a href="/assets/images/lightboxDemo/image2.jpg" data-mediabox="my-gallery-name" data-title="Sample image">
        <img src="/assets/images/lightboxDemo/image2-thumb.jpg" alt="Image" />
      </a>
      <a href="/assets/images/lightboxDemo/image3.png" data-mediabox="my-gallery-name" data-title="Sample image">
        <img src="/assets/images/lightboxDemo/image3-thumb.png" alt="Image" />
      </a>
      <a href="/assets/images/lightboxDemo/image2.jpg" data-mediabox="my-gallery-name" data-title="Sample image">
        <img src="/assets/images/lightboxDemo/image2-thumb.jpg" alt="Image" />
      </a>
      <a href="/assets/images/lightboxDemo/image3.png" data-mediabox="my-gallery-name" data-title="Sample image">
        <img src="/assets/images/lightboxDemo/image3-thumb.png" alt="Image" />
      </a>      
    </div>

  </div>


{% endblock mainContent %}