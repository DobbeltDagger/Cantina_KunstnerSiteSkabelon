{% extends "base.njk" %}

{% block mainContent %}


  <!-- bg -->
  <div class='bgWrapper'></div>

  <div class='programWrapper'>
    {% for prog in collections.currentProgram %}
      <a href='{{ prog.data.link }}'><img src='{{ prog.data.plakat }}'/></a>
    {% endfor %}
  </div>

  {# content | safe #}

  <!-- Ã¸vrige program-punkter herunder?? -->
  <div class='belowProgramWrapper'>

    <div class='inside'>

      <!-- overskrift -->
      <div class="Grid Grid--gutters Grid--full large-Grid--fit">
        <div class="Grid-cell">
          <h2>Upcoming</h2>
        </div>
      </div>

      <!-- grid, upcoming program items -->
      <div class="belowProgramWrapper">

        <div class='inside'>
          <div class="Grid Grid--gutters Grid--full large-Grid--fit">
              
              {% for prog in collections.upcomingProgram | reverse %}
                <div class="Grid-cell">
                  <h3>{{ prog.data.title }}</h3>
                  {{ prog.data.content | safe }}
                  <p><a href='{{ prog.data.link }}'>link</a></p>
                </div>
              {% endfor %}

          </div>
        </div>

      </div>


      <!-- overskrift -->
      <div class="Grid Grid--gutters Grid--full large-Grid--fit">
        <div class="Grid-cell">
          <h2>Previous</h2>
        </div>
      </div>


      <!-- grid, upcoming program items -->
      <div class="belowProgramWrapper">

        <div class='inside'>
          <div class="Grid Grid--gutters Grid--full large-Grid--fit">
              
            {% for prog in collections.previousProgram | reverse %}
              <div class="Grid-cell">
                <h3>{{ prog.data.title }}</h3>
                {{ prog.data.content | safe }}
                <p><a href='{{ prog.data.link }}'>link</a></p>
              </div>
            {% endfor %}

          </div>
        </div>

      </div>

      
    </div> <!-- eof inside -->

  </div> <!-- eof belowProgramWrapper -->

{% endblock mainContent %}