{% extends "base.njk" %}

{% block mainContent %}

  <!-- bg -->
  <div class='bgWrapper'></div>

  <div class='programWrapper'>
    {% for prog in collections.currentProgram %}
      <a href='{{ prog.data.link }}'><img src='{{ prog.data.plakat }}'/></a>
    {% endfor %}
  </div>

  {# content | safe #}

  <!-- Ã¸vrige program-punkter herunder?? -->
  <div class='belowProgramWrapper'>

    <div class='insideCol'>

      <!-- overskrift -->
      <div class="Grid Grid--gutters Grid--full large-Grid--fit">
        <div class="Grid-cell">
          <h2 class='centered'>Upcoming</h2>
        </div>
      </div>

      <!-- grid, upcoming program items -->
      <div class="belowProgramWrapper">

        <div class="Grid Grid--gutters Grid--full large-Grid--fit">
          <div class="Grid-cell">
            {% for prog in collections.upcomingProgram | reverse %}
              <div class='prog'>
                <h3><a href='{{ prog.data.link }}'>{{ prog.data.title }}</a> &rarr;</h3>
                {{ prog.data.content | safe }}
              </div>
            {% endfor %}
          </div>
        </div>

      </div>

      <!-- overskrift -->
      <!-- 
      <div class="Grid Grid--gutters Grid--full large-Grid--fit">
        <div class="Grid-cell">
          <h2>Previous</h2>
        </div>
      </div>

      <div class="belowProgramWrapper">

        <div class="Grid Grid--gutters Grid--full large-Grid--fit">
          <div class="Grid-cell">
            {% for prog in collections.previousProgram | reverse %}
              <a href='{{ prog.data.link }}'>
                <h3>{{ prog.data.title }} &rarr;</h3>
              </a>
              {{ prog.data.content | safe }}
            {% endfor %}
          </div>
        </div>

      </div>
      -->

    </div> <!-- eof insideColumn -->

  </div> <!-- eof belowProgramWrapper -->

  <!-- swiper demo -->
    <!-- Slider main container -->
  <div class="swiper-container">
    <!-- Additional required wrapper -->
    <div class="swiper-wrapper">
      <!-- Slides -->
      <div class="swiper-slide">Slide 1</div>
      <div class="swiper-slide">Slide 2</div>
      <div class="swiper-slide">Slide 3</div>
      ...
    </div>
    <!-- If we need pagination -->
    <div class="swiper-pagination"></div>

    <!-- If we need navigation buttons -->
    <div class="swiper-button-prev"></div>
    <div class="swiper-button-next"></div>

    <!-- If we need scrollbar -->
    <div class="swiper-scrollbar"></div>
  </div>


  <!-- LIGHTBOx demo -->
  <div class='lightboxWrapper'>
    <a href="/assets/images/lightboxDemo/image1.jpg" data-mediabox="my-gallery-name" data-title="Sample image">
      <img src="/assets/images/lightboxDemo/image1-thumb.jpg" alt="Image" />
    </a>
    <a href="/assets/images/lightboxDemo/image2.jpg" data-mediabox="my-gallery-name" data-title="Sample image">
      <img src="/assets/images/lightboxDemo/image2-thumb.jpg" alt="Image" />
    </a>
    <a href="/assets/images/lightboxDemo/image3.png" data-mediabox="my-gallery-name" data-title="Sample image">
      <img src="/assets/images/lightboxDemo/image3-thumb.png" alt="Image" />
    </a>
  </div>

{% endblock mainContent %}