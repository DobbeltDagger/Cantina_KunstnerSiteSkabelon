{% extends "base.njk" %}

{% block mainContent %}

  <h2>Udstillinger</h2>
  <!-- <p>A list of resources that are being used, or referenced, frequently in the code&amp;share workshops. Links open in new windows</p> -->
  <div class='udstillingerWrapper'>
    {% for udst in collections.udstillingerCollection %}
      <div class='udst'>
        <div class='img'><a href='{{ udst.url }}'><img src='{{ udst.data.thumbUrl }}'></a></div>
        <div class='info'>
          <span class='title'>{{ udst.data.title }}</span>
          {{ udst.data.description }}
          <span class='link'><a href="{{ udst.data.url }}" target="_blank">{{ udst.data.urlTitle }}</a></span>
        </div>
      </div>
    {% endfor %}
  </div>

{% endblock mainContent %}